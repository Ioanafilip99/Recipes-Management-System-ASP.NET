@{
    ViewBag.Title = "Cook"; 
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
    <th>Name</th>
    <th>Update/Remove</th>
    </thead>
    <tbody>
        @foreach (var cook in ViewBag.Cooks)
        {
            <tr>
                <td>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @Html.Label("Name", "Name:")
                            <br />
                            <p>@cook.Name</p>

                        </div>
                        <div class="panel-body">
                            @Html.Label("PhoneNumber", "Phone number:")
                            <br />
                            <p>@cook.ContactInfo.PhoneNumber</p>

                        </div>
                    </div>

                <td>
                    @using (Html.BeginForm(actionName: "Edit", controllerName: "Cook", method: FormMethod.Get,
                    routeValues: new { id = cook.CookId }))
                    {
                        <button type="submit" class="btn btn-link col-lg-3">Update</button>
                    }
                    @using (Html.BeginForm(actionName: "Delete", controllerName: "Cook", method: FormMethod.Post,
                    routeValues: new { id = cook.CookId }))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button type="submit" class="btn btn-link col-lg-3">Remove</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<br /> @Html.ActionLink("Add cook", "New")