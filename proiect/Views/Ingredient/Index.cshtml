@{
    ViewBag.Title = "Ingredients";
}

<h2>@ViewBag.Title</h2>
<br />

<table class="table">
    <thead>
    <th>Name</th>
    <th>Update/Remove</th>
    </thead>
    <tbody>
        @foreach (var ingredient in ViewBag.Ingredients)
        {
            <tr>
                <td>@ingredient.Name</td>
                <td>
                    @using (Html.BeginForm(actionName: "Edit", controllerName: "Ingredient", method:
                   FormMethod.Get,
                    routeValues: new { id = ingredient.IngredientId }))
                    {
                        <button type="submit" class="btn btn-link col-lg-3">Update</button>
                    }
                    @using (Html.BeginForm(actionName: "Delete", controllerName: "Ingredient", method:
                   FormMethod.Post,
                    routeValues: new { id = ingredient.IngredientId }))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button type="submit" class="btn btn-link col-lg-3">Remove</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

@Html.ActionLink("Add ingredient", "New")