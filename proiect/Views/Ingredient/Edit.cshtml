@model proiect.Models.Ingredient

@{
    ViewBag.Title = "Update ingredient";
}

<h2>@ViewBag.Title</h2>
<br />

@using (Html.BeginForm(actionName: "Edit", controllerName: "Ingredient", method: FormMethod.Post))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(i => i.IngredientId)

    @Html.LabelFor(i => i.Name, "Name:")
    <br />
    @Html.EditorFor(i => i.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(i => i.Name, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Update</button>
}